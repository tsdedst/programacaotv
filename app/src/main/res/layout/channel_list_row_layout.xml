<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/channel_number_textview"
        android:layout_width="0dp"
        android:layout_weight=".10"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:text="1."
        android:textAppearance="@style/TextAppearance.AppCompat" />
    <TextView
        android:id="@+id/channel_name_textview"
        android:layout_width="0dp"
        android:layout_weight=".70"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:layout_toRightOf="@id/channel_number_textview"
        android:text="Channel Name Text"
        android:textAppearance="@style/TextAppearance.AppCompat" />
    <ImageView
        android:id="@+id/channel_favorite_imageview"
        android:layout_toRightOf="@id/channel_name_textview"
        android:layout_width="0dp"
        android:layout_weight=".20"
        android:layout_height="match_parent" />
<!--</LinearLayout>-->
    </merge>